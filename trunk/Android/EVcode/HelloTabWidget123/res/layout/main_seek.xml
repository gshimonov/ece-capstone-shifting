            android:layout_centerHorizontal="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="50dp"
            android:text="@string/idprogress"
            android:textAppearance="?android:attr/textAppearanceLarge" />

    </RelativeLayout>

